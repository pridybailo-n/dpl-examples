				};

				/* ------------ DPNIs --------------*/
				obj@200 {
					obj_name = "dpni@1";
				};

				/* ------------ DPBPs --------------*/
				obj@300 {
					obj_name="dpbp@1";
				};

				/* ------------ DPIOs --------------*/
				obj@401 {
					obj_name = "dpio@1";
				};
				obj@402 {
